<Window x:Class="Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mosaico"
        mc:Ignorable="d"
        Icon="assets/mosaic.ico"
        Title="Mosaico"
        Height="600"
        Width="600"
        MinWidth="450"
        MinHeight="470">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top"
                       Background="#FF7C07DE"
                       Height="100"></TextBlock>
            <TextBlock DockPanel.Dock="Left"
                       Background="#FF7C07DE"
                       Width="100"></TextBlock>
            <TextBlock DockPanel.Dock="Bottom"
                       Background="#FF1C9927"
                       Height="100"></TextBlock>
            <TextBlock DockPanel.Dock="Right"
                       Background="#FF1C9927"
                       Width="100"></TextBlock>
            <TextBlock DockPanel.Dock="Bottom"
                       Background="#FFE84A00"
                       Height="100"></TextBlock>
            <TextBlock DockPanel.Dock="Left"
                       Background="#FFE84A00"
                       Width="100"></TextBlock>
            <TextBlock DockPanel.Dock="Top"
                       Background="#FFF501D4"
                       Height="100"></TextBlock>
            <TextBlock DockPanel.Dock="Right"
                       Background="#FFF501D4"
                       Width="100"></TextBlock>
            <TextBlock Background="Black"></TextBlock>
        </DockPanel>
    </Grid>
</Window>
